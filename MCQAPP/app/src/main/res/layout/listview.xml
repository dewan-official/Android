<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/back"
    android:elevation="10dp">
    <ImageView
        android:id="@+id/cccc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_question_answer_black_24dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="254dp"
        android:layout_height="59dp"
        android:layout_alignRight="@+id/cccc"
        android:layout_marginRight="-253dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/ques"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:background="#00cccccc"
            android:text="kjdfhv djffkjdb dfkjndfk ffkjf"
            android:textColor="#131ddc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/total_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00cccccc"
            android:text="Total Question : "
            android:textColor="#131ddc"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageButton
        android:layout_alignParentRight="true"
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:background="#00000000"
        android:padding="5dp"/>

</RelativeLayout>