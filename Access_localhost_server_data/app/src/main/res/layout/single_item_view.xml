<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:contentPadding="15dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/id_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="ID:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/student_id_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Student ID:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/class_id_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Class ID:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/student_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/student_f_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Father Name: "
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/student_m_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mother Name: "
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/dob_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Date of Birth:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/age_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age:"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="normal"/>
            </LinearLayout>
            <TextView
                android:id="@+id/student_address_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Address:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/class_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class Name:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="normal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>