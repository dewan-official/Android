<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/request_user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person"
            android:padding="5dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_toRightOf="@+id/request_user_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/request_user_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MD. OLI ULLAH"
                    android:paddingHorizontal="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/request_user_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MD. OLI ULLAH"
                    android:paddingHorizontal="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2">
                <Button
                    android:id="@+id/request_accept_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Accept"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="17dp"/>
                <Button
                    android:id="@+id/request_cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#f70505"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textStyle="normal"
                    android:textSize="17dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>