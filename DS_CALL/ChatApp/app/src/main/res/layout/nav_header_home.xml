<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".Home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/user_cover_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back" />
        <ImageView
            android:id="@+id/current_user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/person"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_below="@id/current_user_image"
            android:id="@+id/current_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_below="@+id/current_user_name"
            android:id="@+id/current_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ccc"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:id="@+id/select_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_menu_camera"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/phone_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:drawableLeft="@drawable/phone_small"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_title_black_24dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/total_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:drawableLeft="@drawable/friends"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/joid_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:drawableLeft="@drawable/join"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
